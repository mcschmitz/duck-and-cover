name: pull_request

on: pull_request

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - name: Get Actions
        uses: actions/checkout@v1

      - name: Check Style
        uses: ebot7/eb7-styleguide@master
        with:
          reporter: 'github-pr-review'
          settings: 'settings.cgf'
        env:
          GITHUB_TOKEN: ${{ secrets.github_token }}